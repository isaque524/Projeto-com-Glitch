<!DOCTYPE html>
<html lang="en">
<head>
  
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
       <title>Tabela</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link rel="stylesheet" href="/tabela.css" />
   <script src="https://kit.fontawesome.com/723f0cb31d.js" crossorigin="anonymous"></script>

</head>
<body>
      
  <header>
    <h1>Meus Jogos</h1>
  </header>
  
  <div class="row">
    <!-- loop inicio -->
    {{#each demos}}
    
      <div class="column">
        <table class="table">
          
          <thead>
            <tr>
              <th class="imag">imagem</th>
              <th class="nome">nome</th>
              <th class="descri">descrição</th>
              <th class="chave">chave</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td style="background-image: url('{{imagem}}');"></td>
              <td class="nome">{{nome}}</td>
              <td class="descri">{{descricao}}</td>
              <td class="chave">{{chave_produto}}</td>
            </tr>
          </tbody>
          
        </table>
      </div>
    {{/each}}
    <!-- fim do loop -->
  </div>

</body>
</html>